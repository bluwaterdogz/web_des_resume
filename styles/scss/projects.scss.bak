/* Projects */
#projects {
    overflow: auto;
    width: 100%;
    text-align: center;

    ul {
        list-style: none;
        text-align: left;
    }

    a {
        font-size: 40px;
        font-weight: bold;
        text-decoration: none;
        color: #202020;
    }

    .disclaimer {
        margin: 40px auto;
    }

    .img-over {
        position: absolute;
        right: 10%;
        width: 360px;
        height: 360px;
        margin-top: 20px;
        -webkit-transition: 1s;
        -o-transition: 1s;
        transition: 1s;
        border: 2px solid #202020;
        border-radius: 200px;
        box-shadow: 0 0 20px 5px #000;
    }

    .project-title-cont ul {
        margin-top: 20px;
    }

    .transparent {
        opacity: 0;
    }

    li {
        -webkit-transition: 500ms;
        -o-transition: 500ms;
        transition: 500ms;
    }

    li:hover {
        transform: scale(1.2);
    }

    .projects {
        width: 40%;
        margin: 20px;
    }

    .viewer {
        position: relative;
        top: 50px;
        float: left;
        width: 50%;
        height: 40%;
    }
    @media (max-width:767px) {
        .project-title-cont {
            float: none;
            li {
                text-align: center;
            }
        }

        .project-pic-cont {
            display: none;
        }

        .disclaimer {
            display: none;
        }
    }
    @media (min-width:768px) {}
    @media (min-width:768px) and (max-width:992px) {
        .project-pic-cont {
            display: none;
            margin: auto;
        }
          .project-title-cont{ li {
              text-align: center;
          }
        }
    }
    @media(min-width:992px) {}
    @media(min-width:992px) and (max-width:1200px) {}
    @media(min-width:1200px) {}
    @media(min-width:1200px) and (max-width:1900px) {}
    @media (min-width:1900px) {}
}
